<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <div class="card text-center mt-5 p-4 article-card">
                <h1><%= @article.title %></h1>
                    <div class="card-body">
                        <p><%= @article.description %></p>
                       
                        <% @article.categories.each do |cat| %>
                            <div class="badge rounded-pill bg-info mb-3"><%= cat.name %></div>
                            <% end %>
                            <br/>
                            <% if logged_in? && @article.user == current_user %>
                                <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-primary" %>
                                <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-primary" %> <br/>
                            <% end %>
                            <%= link_to 'Return to Article Listing', articles_path, class:"btn btn-primary mt-3" %>
                    </div>
            </div>

        </div>
    </div>
</div>