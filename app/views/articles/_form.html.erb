<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-10">

         <%= render 'shared/errors', obj: @article %>
            <div class="card text-center mt-5 p-4">

                <%= form_with(model: @article, local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-sm-3 col-form-label" %><br/>
                    <div  class="col-8 mb-3">
                    <%= f.text_field :title, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class: "col-sm-3 col-form-label" %><br/>
                    <div  class="col-8">
                    <%= f.text_area :description, rows: 10, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :category, class: "col-sm-3 col-form-label" %><br/>
                    <div  class="col-8">
                        <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Select Categories"},
                        {multiple: true, class: "form-select mt-3"}) %>
                    </div>
                </div>
            </div>



                <div class="form-group mt-3 text-end">
                    <%= f.submit class: "btn btn-outline-primary" %>
                </div>
                
                <% end %>
            </div>
        </div>
    </div>
</div>