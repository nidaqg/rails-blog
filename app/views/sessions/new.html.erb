<h1  class="text-center mt-4">Login</h1>

<div class="container">
    <div class="row justify-content-center">
    <div class="col-sm-8">

    <div class="card text-center mt-5 p-4">

                <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
                
                <div class="form-group row">
                    <%= f.label :email, class: "col-sm-3 col-form-label" %><br/>
                    <div  class="col-8 mb-3">
                    <%= f.email_field :email, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                <%= f.label :password, class: "col-sm-3 col-form-label" %><br/>
                <div  class="col-8">
                <%= f.password_field :password, class: "form-control" %>
                </div>
            </div>

                <div class="form-group mt-3 text-end">
                    <%= f.submit"Login", class: "btn btn-outline-primary" %>
                </div>
                
                <% end %>
            </div>
        </div>
        </div>
    </div>
</div>
<div class="text-center mt-4">
    <p>Don't have an account?</p>
    <%= link_to 'Sign Up', signup_path, class: "btn btn-primary" %>
 </div>
