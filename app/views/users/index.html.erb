<h1 class="text-center mt-4 mb-4">Our Bloggers</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10 text-center">
            <%= link_to 'Sign up for an Account', signup_path, class: "btn btn-secondary mb-4" %>

            <% @users.each do |user| %>
            <div class="card text-center mb-4 article-card">
                <div class="card-header text-muted">
                    written by <%= link_to user.username, user %>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to gravatar_for(user, size: 150), user %></h5>
                    <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                    <%= link_to 'View Profle', user, class: "btn btn-primary" %>
                    <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-primary" %>
                </div>
                <div class="card-footer text-muted">
                    Joined <%= time_ago_in_words(user.created_at) %> ago
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
