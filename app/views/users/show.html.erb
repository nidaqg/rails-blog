<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-10 text-center mb-4">
            <h1 class="mt-4"><%= @user.username %>'s Profile</h1>
            <% if logged_in? && @user == current_user %>
                <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-outline-primary btn-sm mb-3" %><br/>
                <%= link_to 'Delete Profile', user_path(@user), class: "btn btn-outline-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"} %><br/>
            <% end %>
            <%= gravatar_for @user, size: 200 %>

        </div>
    
        <h3 class="text-center mb-3"> My Articles</h3>
        <% if logged_in? && @user == current_user %>
            <p class="text-center">
                <%= link_to 'New Article', new_article_path, class: "btn btn-outline-primary mb-4" %>
            </p>
        <% end %>

        <%= render 'articles/article' %>

    </div>
</div>