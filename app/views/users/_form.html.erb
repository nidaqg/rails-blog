<div class="container">
    <div class="row justify-content-center">
    <div class="col-sm-8">

    <%= render 'shared/errors', obj: @user %>

    <div class="card text-center mt-5 p-4">

                <%= form_with(model: @user, local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username, class: "col-sm-3 col-form-label" %><br/>
                    <div  class="col-8 mb-3">
                    <%= f.text_field :username, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :email, class: "col-sm-3 col-form-label" %><br/>
                    <div  class="col-8 mb-3">
                    <%= f.email_field :email, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                <%= f.label :password, class: "col-sm-3 col-form-label" %><br/>
                <div  class="col-8">
                <%= f.password_field :password, class: "form-control" %>
                </div>
            </div>

                <div class="form-group mt-3 text-end">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Profile", class: "btn btn-outline-primary") %>
                </div>
                
                <% end %>
            </div>
        </div>
        </div>
    </div>
</div>